{
  "name": "to-do-list-app",
  "version": "1.0.0",
  "description": "this a to do list that is going to be made for the odin project. This project is gonna be absolutely awesome I cant wait to build.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:sass": "sass  --no-source-map src/sass:public/css",
    "copy:html": "copyfiles -u 1 ./dist/*.html public",
    "copy:asssts": "copyfiles -u 1 ./dist/assets/**/* public",
    "copy": "npm-run-all --parallel copy:*",
    "watch:assests": "onchange \"dist/assests/**/*\" -- npm run copy:html",
    "watch:html": "onchange 'dist/*.html' -- npm run copy:html",
    "watch:sass": "sass  --no-source-map --watch dist/sass:public/css",
    "watch": "npm-run-all --parallel watch:*",
    "serve": "browser-sync start --server public --files public",
    "start": "npm-run-all copy --parallel watch serve",
    "build": "npm-run-all copy:html build:*",
    "postbuild": "postcss public/css/*.css -u autoprefixer cssnano -r --no-map"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hungry-munk/basic-to-do-list-app.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Hungry-munk/basic-to-do-list-app/issues"
  },
  "homepage": "https://github.com/Hungry-munk/basic-to-do-list-app#readme",
  "devDependencies": {
    "node-sass": "^8.0.0",
    "sass": "^1.56.1",
    "sass-loader": "^13.2.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "autoprefixer": "^10.4.2",
    "browser-sync": "^2.27.7",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.0.17",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.1.0",
    "sass": "^1.49.8"
  }
  
}
